# description   : The userspace-rcu package provides a set of userspace RCU (read-copy-update) libraries
# depends       : 

name=liburcu
version=0.15.3    
release=1
source="https://lttng.org/files/urcu/userspace-rcu-0.15.3.tar.bz2"

options="!checksum"

build() {
    cd *
    
    ./configure --prefix=/usr    \
    --disable-static \
    --docdir=/usr/share/doc/liburcu-0.15.3 
    make
    make DESTDIR=$PKG install
}
