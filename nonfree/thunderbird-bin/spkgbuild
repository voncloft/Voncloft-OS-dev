# description : Official firefox bin
# depends : 

name=thunderbird-bin
version=145
release=0a1
month=09
year=2025
day=24
hour=10
min=23
sec=40
source="https://archive.mozilla.org/pub/thunderbird/nightly/$year/$month/$year-$month-$day-$hour-$min-$sec-comm-central/thunderbird-$version.$release.en-US.linux-x86_64.tar.xz
	thunderbird.sh
	thunderbird.desktop"

build() {
	mkdir -pv $PKG/usr/bin
	mkdir -pv $PKG/usr/share/applications
	mkdir -pv $PKG/opt

	cp -rv thunderbird/ $PKG/opt/$name

	#launchers
	install -m755 $SRC/thunderbird.sh "$PKG"/usr/bin/thunderbird
	install -m644 *.desktop $PKG/usr/share/applications/
	for i in 16x16 32x32 48x48 64x64 128x128; do
    		install -d "$PKG"/usr/share/icons/hicolor/$i/apps/
    		ln -s /opt/$name/browser/chrome/icons/default/default${i/x*}.png \
          	$PKG/usr/share/icons/hicolor/$i/apps/thunderbird.png
  	done
  	ln -Ts /usr/share/hunspell "$PKG"/opt/$name/dictionaries
	ln -Ts /usr/share/hyphen "$PKG"/opt/$name/hyphenation
	ln -sf /usr/lib/libnssckbi.so "$PKG"/opt/$name/libnssckbi.so
	
}
