# description   : Gwenview is a fast and easy-to-use image viewer for KDE
# depends       : exiv2 kimageannotator  lcms2 libkdcraw

name=gwenview
version=25.08.3    
release=1
source="https://download.kde.org/stable/release-service/$version/src/gwenview-$version.tar.xz"

options="!checksum"

build() {
        cd $name-$version
        SKIP_OPTIONAL='CFitsio'
        mkdir build 
cd    build 
cmake -D CMAKE_INSTALL_PREFIX=/usr \
-D CMAKE_BUILD_TYPE=Release         \
-D BUILD_TESTING=OFF                \
      -D FORCE_NOT_REQUIRED_DEPENDENCIES="$SKIP_OPTIONAL" \
-W no-dev .. 
make
make DESTDIR=$PKG install
}
