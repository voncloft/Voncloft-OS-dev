# description : Core components for the kde desktop
# depends : kde-deps kpipewire

name=spectacle
version=6.5.2
release=1

source="https://download.kde.org/stable/plasma/6.5.2/spectacle-$version.tar.xz"
options="!checksum"

build() {
   cd $name-$version
   plasma-package-installer
  cd build
  make DESTDIR=$PKG install
}
