# description : used for kapipox
# depends : python-chardet doxygen

name=python-doxypypy
version=0.8.8.7
version=1

source="https://files.pythonhosted.org/packages/source/d/doxypypy/doxypypy-0.8.8.7.tar.gz"

build()
{
	cd *
	pip3 wheel -w dist --no-build-isolation --no-deps --no-cache-dir $PWD
	pip3 install --no-index --find-links dist --no-user doxypypy --root=$PKG
}
