# description   : The plasma-activities-6
# depends       : boost kf-depends

name=plasma-activities
version=6.5.2
release=1
source=" https://download.kde.org/stable/plasma/6.5.2/plasma-activities-6.5.2.tar.xz"
options="!checksum"

build() {
        cd $name-$version
        mkdir build 
cd    build 
cmake -D CMAKE_INSTALL_PREFIX=$KF6_PREFIX \
-D CMAKE_BUILD_TYPE=Release         \
-D BUILD_TESTING=OFF                \
-W no-dev .. 
make
make DESTDIR=$PKG install
}
