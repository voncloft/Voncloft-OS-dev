# description : Core components for the kde desktop installs all plasma programs
# depends :	kdecoration libkscreen libksysguard breeze breeze-gtk layer-shell-qt plasma-activities libplasma kscreenlocker
# depends :	kinfocenter kglobalacceld kwayland kwin plasma5support plasma-activities-stats kpipewire plasma-workspace
# depends :	plasma-disks kde-gtk-config kmenuedit kscreen kwallet-pam kwrited milou plasma-nm plasma-pa plasma-workspace-wallpapers
# depends :	polkit-kde-agent powerdevil plasma-desktop kgamma ksshaskpass sddm-kcm kactivitymanagerd plasma-integration xdg-desktop-portal-kde
# depends :	drkonqi plasma-vault kde-cli-tools systemsettings plasma-thunderbolt plasma-firewall plasmasystemmonitor 
# depends : 	qqc2-breeze-style ksystemstats oxygen-sounds kdeplasma-addons plasma-welcome ocean-sound-theme print-manager
# depends :	wacomtablet oxygen spectacle 

name=plasma-programs
version=6.3.4
release=1

build() {

	mkdir -pv $PKG/etc/pam.d
        cat <<-EOF > $PKG/etc/pam.d/kde
        # Begin /etc/pam.d/kde

        auth     requisite      pam_nologin.so
        auth     required       pam_env.so

        auth     required       pam_succeed_if.so uid >= 1000 quiet
        auth     include        system-auth

        account  include        system-account
        password include        system-password
        session  include        system-session

        # End /etc/pam.d/kde
	EOF

        cat <<-EOF > $PKG/etc/pam.d/kde-np
        # Begin /etc/pam.d/kde-np

        auth     requisite      pam_nologin.so
        auth     required       pam_env.so

        auth     required       pam_succeed_if.so uid >= 1000 quiet
        auth     required       pam_permit.so

        account  include        system-account
        password include        system-password
        session  include        system-session

        # End /etc/pam.d/kde-np
	EOF

        cat <<-EOF > $PKG/etc/pam.d/kscreensaver
        # Begin /etc/pam.d/kscreensaver

        auth    include system-auth
        account include system-account

        # End /etc/pam.d/kscreensaver
	EOF

}
