# description : The Expat package contains a stream oriented C library for parsing XML. 
# depends :

name=expat
version=2.7.1
release=1

source="https://github.com/libexpat/libexpat/releases/download/R_2_7_1/expat-$version.tar.xz"

build()
{
	./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/expat-$version	

	make
	make DESTDIR=$PKG install
	sed -e "/^am__append_1/ s/doc//" -i Makefile
	make clean
	CC="gcc -m32" ./configure \
    --prefix=/usr        \
    --disable-static     \
    --libdir=/usr/lib32  \
    --host=i686-pc-linux-gnu

         make
        mkdir -pv $PKG/usr/lib32
         make DESTDIR=$PWD/DESTDIR install
	cp -Rv DESTDIR/usr/lib32/* $PKG/usr/lib32
}
