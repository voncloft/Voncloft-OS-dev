# description	: Valve's digital software delivery system
# depends	: alsa-plugins fontconfig libglvnd libgpg-error libva libx11 libxcrypt libxcrypt-compat libxinerama libxss nss pipewire

name=steam
version=1.0.0.83
release=1
source="http://repo.steampowered.com/$name/pool/$name/s/$name/${name}_$version.tar.gz"

build() {
	cd $name-launcher
	
	make DESTDIR=$PKG install

	# blank steamdeps because apt-get
	ln -sf /bin/true $PKG/usr/bin/steamdeps
}
